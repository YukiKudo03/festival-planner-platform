<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>出店申請の編集</h1>
  <%= link_to "戻る", festival_vendor_application_path(@festival, @vendor_application), class: "btn btn-secondary" %>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">申請内容の編集</h5>
      </div>
      <div class="card-body">
        <%= form_with(model: [@festival, @vendor_application], local: true) do |form| %>
          <% if @vendor_application.errors.any? %>
            <div class="alert alert-danger">
              <h6><%= pluralize(@vendor_application.errors.count, "error") %> prohibited this application from being saved:</h6>
              <ul class="mb-0">
                <% @vendor_application.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :business_name, class: "form-label" %>
            <%= form.text_field :business_name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :business_type, class: "form-label" %>
            <%= form.text_field :business_type, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, rows: 4, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :requirements, class: "form-label" %>
            <%= form.text_area :requirements, rows: 3, class: "form-control" %>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "キャンセル", festival_vendor_application_path(@festival, @vendor_application), class: "btn btn-secondary" %>
            <%= form.submit "更新", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">お祭り情報</h5>
      </div>
      <div class="card-body">
        <h6 class="card-title"><%= @festival.name %></h6>
        <p class="card-text">
          <small class="text-muted">
            <%= @festival.start_date.strftime("%Y年%m月%d日") %> - 
            <%= @festival.end_date.strftime("%Y年%m月%d日") %>
          </small>
        </p>
        <p class="card-text">
          <small class="text-muted">会場: <%= @festival.location %></small>
        </p>
      </div>
    </div>
  </div>
</div>