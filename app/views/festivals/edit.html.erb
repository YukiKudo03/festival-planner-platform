<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h3 class="mb-0">お祭りを編集</h3>
      </div>
      <div class="card-body">
        <%= form_with model: @festival, local: true, class: "needs-validation", novalidate: true do |f| %>
          <% if @festival.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= @festival.errors.count %>件のエラーがあります:</h5>
              <ul class="mb-0">
                <% @festival.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "お祭り名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true %>
            <div class="invalid-feedback">
              お祭り名を入力してください。
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :description, "説明", class: "form-label" %>
            <%= f.text_area :description, rows: 4, class: "form-control" %>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :start_date, "開始日時", class: "form-label" %>
                <%= f.datetime_local_field :start_date, class: "form-control", required: true %>
                <div class="invalid-feedback">
                  開始日時を入力してください。
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :end_date, "終了日時", class: "form-label" %>
                <%= f.datetime_local_field :end_date, class: "form-control", required: true %>
                <div class="invalid-feedback">
                  終了日時を入力してください。
                </div>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :location, "開催場所", class: "form-label" %>
            <%= f.text_field :location, class: "form-control", required: true %>
            <div class="invalid-feedback">
              開催場所を入力してください。
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :budget, "予算", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text">¥</span>
                  <%= f.number_field :budget, class: "form-control", min: 0, step: 1000 %>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :status, "ステータス", class: "form-label" %>
                <%= f.select :status, 
                    options_for_select([
                      ['企画中', 'planning'],
                      ['準備中', 'preparation'],
                      ['実施中', 'active'],
                      ['完了', 'completed'],
                      ['中止', 'cancelled']
                    ], @festival.status), 
                    {}, 
                    { class: "form-select" } %>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-between">
            <div>
              <%= link_to "キャンセル", @festival, class: "btn btn-secondary" %>
              <% if can? :destroy, @festival %>
                <%= link_to "削除", @festival, 
                    data: { "turbo-method": :delete, "turbo-confirm": "本当に削除しますか？" }, 
                    class: "btn btn-danger" %>
              <% end %>
            </div>
            <%= f.submit "更新", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
