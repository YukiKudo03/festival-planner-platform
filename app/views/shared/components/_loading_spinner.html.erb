<%
  # Loading Spinner Component
  # Usage: <%= render 'shared/components/loading_spinner' %>
  # Usage: <%= render 'shared/components/loading_spinner', size: "lg", message: "Loading..." %>
  
  local_assigns[:size] ||= "default"
  local_assigns[:variant] ||= "primary"
  
  spinner_classes = ["spinner-border"]
  spinner_classes << "spinner-border-#{size}" if size != "default"
  spinner_classes << "text-#{variant}"
  spinner_classes << (local_assigns[:class] || "")
%>

<div class="d-flex align-items-center justify-content-center p-3">
  <div class="<%= spinner_classes.join(' ').strip %>" role="status">
    <span class="visually-hidden">読み込み中...</span>
  </div>
  <% if local_assigns[:message] %>
    <span class="ms-2 text-muted"><%= message %></span>
  <% end %>
</div>