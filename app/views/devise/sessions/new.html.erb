<div class="row justify-content-center">
  <div class="col-lg-5">
    <div class="card">
      <div class="card-header text-center">
        <h3 class="mb-0">ログイン</h3>
        <p class="text-muted mb-0">Festival Planner Platform</p>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "needs-validation", novalidate: true) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
            <div class="invalid-feedback">
              有効なメールアドレスを入力してください。
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
            <div class="invalid-feedback">
              パスワードを入力してください。
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
        
        <div class="text-center mt-3">
          <small class="text-muted">
            テスト用アカウント:<br>
            committee@example.com / password (実行委員)<br>
            vendor@example.com / password (出店者)
          </small>
        </div>
      </div>
      <div class="card-footer text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
