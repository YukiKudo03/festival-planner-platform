<div class="row justify-content-center">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header text-center">
        <h3 class="mb-0">アカウント作成</h3>
        <p class="text-muted mb-0">Festival Planner Platformへようこそ</p>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, class: "needs-validation", novalidate: true) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :first_name, "名前", class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control", required: true %>
                <div class="invalid-feedback">
                  名前を入力してください。
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :last_name, "苗字", class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control", required: true %>
                <div class="invalid-feedback">
                  苗字を入力してください。
                </div>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
            <div class="invalid-feedback">
              有効なメールアドレスを入力してください。
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :phone, "電話番号", class: "form-label" %>
            <%= f.text_field :phone, class: "form-control" %>
            <div class="form-text">ハイフン付きで入力してください（例：090-1234-5678）</div>
          </div>

          <div class="mb-3">
            <%= f.label :role, "参加形態", class: "form-label" %>
            <%= f.select :role, 
                options_for_select([
                  ['地域住民', 'resident'],
                  ['ボランティア', 'volunteer'],
                  ['出店希望者', 'vendor'],
                  ['実行委員', 'committee_member']
                ], 'resident'), 
                {}, 
                { class: "form-select" } %>
          </div>

          <div class="mb-3">
            <%= f.label :bio, "自己紹介", class: "form-label" %>
            <%= f.text_area :bio, rows: 3, class: "form-control" %>
            <div class="form-text">簡単な自己紹介や参加動機をお聞かせください。</div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :password, "パスワード", class: "form-label" %>
                <% if @minimum_password_length %>
                  <small class="text-muted">（<%= @minimum_password_length %>文字以上）</small>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
                <div class="invalid-feedback">
                  パスワードを入力してください。
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
                <div class="invalid-feedback">
                  パスワード確認を入力してください。
                </div>
              </div>
            </div>
          </div>

          <div class="d-grid">
            <%= f.submit "アカウントを作成", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
