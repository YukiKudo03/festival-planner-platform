<% content_for :title, "Venues Management" %>
<% content_for :breadcrumb do %>
  <%= link_to "Admin", admin_dashboard_path, class: "breadcrumb-item" %>
  <span class="breadcrumb-item active">Venues</span>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Venues Management</h2>
  <%= link_to "Add New Venue", new_admin_venue_path, class: "btn btn-primary" %>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: admin_venues_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-6">
        <%= form.text_field :search, placeholder: "Search venues...", value: params[:search], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.select :facility_type, 
                        options_for_select([
                          ["All Types", ""],
                          ["Indoor", "indoor"],
                          ["Outdoor", "outdoor"],
                          ["Mixed", "mixed"],
                          ["Stadium", "stadium"],
                          ["Conference Hall", "conference_hall"],
                          ["Park", "park"],
                          ["Plaza", "plaza"]
                        ], params[:facility_type]), 
                        {}, { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <div class="d-flex gap-2">
          <%= form.submit "Search", class: "btn btn-outline-primary" %>
          <%= link_to "Clear", admin_venues_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Venues List -->
<div class="row">
  <% @venues.each do |venue| %>
    <div class="col-lg-6 col-xl-4 mb-4">
      <div class="card h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= venue.name %></h5>
          <span class="badge bg-<%= venue.facility_type == 'indoor' ? 'info' : 'success' %>">
            <%= venue.facility_type.humanize %>
          </span>
        </div>
        
        <div class="card-body">
          <% if venue.description.present? %>
            <p class="text-muted small"><%= truncate(venue.description, length: 100) %></p>
          <% end %>
          
          <div class="row text-center mb-3">
            <div class="col-4">
              <div class="border-end">
                <div class="h4 mb-0 text-primary"><%= venue.capacity %></div>
                <small class="text-muted">Capacity</small>
              </div>
            </div>
            <div class="col-4">
              <div class="border-end">
                <div class="h4 mb-0 text-success"><%= venue.venue_areas.count %></div>
                <small class="text-muted">Areas</small>
              </div>
            </div>
            <div class="col-4">
              <div class="h4 mb-0 text-warning"><%= venue.booths.count %></div>
              <small class="text-muted">Booths</small>
            </div>
          </div>
          
          <% if venue.address.present? %>
            <p class="small mb-2">
              <i class="bi bi-geo-alt-fill text-muted"></i>
              <%= venue.address %>
            </p>
          <% end %>
          
          <% if venue.latitude.present? && venue.longitude.present? %>
            <p class="small mb-2">
              <i class="bi bi-pin-map-fill text-muted"></i>
              <%= venue.latitude %>, <%= venue.longitude %>
            </p>
          <% end %>
          
          <!-- Booth Status Summary -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <small class="text-muted">Booth Status:</small>
            <div class="d-flex gap-2">
              <span class="badge bg-success"><%= venue.booths.available.count %> Available</span>
              <span class="badge bg-warning"><%= venue.booths.assigned.count %> Assigned</span>
              <span class="badge bg-danger"><%= venue.booths.occupied.count %> Occupied</span>
            </div>
          </div>
          
          <!-- Occupancy Rate -->
          <% occupancy_rate = venue.occupancy_rate %>
          <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-1">
              <small class="text-muted">Occupancy Rate</small>
              <small class="text-muted"><%= occupancy_rate.round(1) %>%</small>
            </div>
            <div class="progress" style="height: 6px;">
              <div class="progress-bar bg-<%= occupancy_rate > 80 ? 'danger' : occupancy_rate > 60 ? 'warning' : 'success' %>" 
                   role="progressbar" 
                   style="width: <%= occupancy_rate %>%"
                   aria-valuenow="<%= occupancy_rate %>" 
                   aria-valuemin="0" 
                   aria-valuemax="100">
              </div>
            </div>
          </div>
        </div>
        
        <div class="card-footer">
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group" role="group">
              <%= link_to admin_venue_path(venue), class: "btn btn-sm btn-outline-primary" do %>
                <i class="bi bi-eye"></i>
              <% end %>
              <%= link_to edit_admin_venue_path(venue), class: "btn btn-sm btn-outline-secondary" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
              <%= link_to admin_venue_path(venue), method: :delete, 
                          confirm: "Are you sure you want to delete this venue?", 
                          class: "btn btn-sm btn-outline-danger" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </div>
            
            <div class="btn-group" role="group">
              <%= link_to admin_venue_layout_editor_path(venue), class: "btn btn-sm btn-success" do %>
                <i class="bi bi-grid-3x3-gap"></i> Layout Editor
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @venues.empty? %>
  <div class="text-center py-5">
    <i class="bi bi-building display-1 text-muted"></i>
    <h3 class="text-muted mt-3">No venues found</h3>
    <p class="text-muted">Create your first venue to get started with layout management.</p>
    <%= link_to "Create Venue", new_admin_venue_path, class: "btn btn-primary mt-3" %>
  </div>
<% end %>

<!-- Pagination -->
<% if @venues.respond_to?(:current_page) %>
  <div class="d-flex justify-content-center">
    <%= paginate @venues %>
  </div>
<% end %>

<style>
  .card {
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
  .progress {
    background-color: #f8f9fa;
  }
  
  .btn-group .btn {
    border-radius: 0;
  }
  
  .btn-group .btn:first-child {
    border-top-left-radius: 0.375rem;
    border-bottom-left-radius: 0.375rem;
  }
  
  .btn-group .btn:last-child {
    border-top-right-radius: 0.375rem;
    border-bottom-right-radius: 0.375rem;
  }
  
  .border-end {
    border-right: 1px solid #dee2e6;
  }
  
  @media (max-width: 768px) {
    .card-footer .d-flex {
      flex-direction: column;
      gap: 8px;
    }
    
    .card-footer .btn-group {
      width: 100%;
    }
    
    .card-footer .btn {
      flex: 1;
    }
  }
</style>