<script>
document.addEventListener('DOMContentLoaded', function() {
  // AI Insights initialization
  initializeAIInsights();
  
  // Auto-refresh every 5 minutes
  setInterval(refreshAIInsights, 300000);
  
  // Event listeners
  document.getElementById('refresh-ai-insights').addEventListener('click', refreshAIInsights);
  
  // Action button listeners
  document.querySelectorAll('.action-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const action = this.textContent.trim();
      executeAIAction(action);
    });
  });
});

function initializeAIInsights() {
  // Load initial AI insights data
  fetch('/api/v1/ai_recommendations/dashboard_summary')
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        updateAIInsightsDisplay(data.data);
      }
    })
    .catch(error => {
      console.error('Failed to load AI insights:', error);
    });
}

function refreshAIInsights() {
  const refreshBtn = document.getElementById('refresh-ai-insights');
  const originalHTML = refreshBtn.innerHTML;
  
  refreshBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> 更新中...';
  refreshBtn.disabled = true;
  
  fetch('/api/v1/ai_recommendations/dashboard_summary')
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        updateAIInsightsDisplay(data.data);
        showNotification('AI推奨が更新されました', 'success');
      } else {
        showNotification('AI推奨の更新に失敗しました', 'error');
      }
    })
    .catch(error => {
      console.error('Failed to refresh AI insights:', error);
      showNotification('AI推奨の更新に失敗しました', 'error');
    })
    .finally(() => {
      refreshBtn.innerHTML = originalHTML;
      refreshBtn.disabled = false;
    });
}

function updateAIInsightsDisplay(data) {
  // Update quick stats
  if (data.attendance_forecast) {
    document.getElementById('predicted-attendance').textContent = 
      data.attendance_forecast.total_predicted_attendance.toLocaleString();
    document.getElementById('attendance-confidence').textContent = 
      `信頼度: ${(data.attendance_forecast.confidence_score * 100).toFixed(1)}%`;
  }
  
  if (data.roi_optimization) {
    document.getElementById('predicted-roi').textContent = 
      `${data.roi_optimization.current_roi.roi_percentage}%`;
    document.getElementById('roi-trend').textContent = 
      data.roi_optimization.historical_analysis.roi_trend;
  }
  
  if (data.risk_assessment) {
    document.getElementById('risk-level').textContent = 
      data.risk_assessment.risk_level.toUpperCase();
    document.getElementById('risk-score').textContent = 
      `スコア: ${(data.risk_assessment.overall_risk_score * 100).toFixed(1)}%`;
  }
  
  if (data.optimization_opportunities) {
    document.getElementById('optimization-count').textContent = 
      data.optimization_opportunities.total_opportunities;
  }
  
  // Update recommendations list
  if (data.recommendations) {
    updateRecommendationsList(data.recommendations);
  }
}

function updateRecommendationsList(recommendations) {
  const container = document.getElementById('ai-recommendations-list');
  container.innerHTML = '';
  
  recommendations.slice(0, 3).forEach(rec => {
    const item = document.createElement('div');
    item.className = 'recommendation-item p-3 bg-white rounded border-l-4 border-blue-400';
    item.innerHTML = `
      <p class="text-sm font-medium text-gray-800">${rec.title}</p>
      <p class="text-xs text-gray-600">${rec.description}</p>
      <button class="text-blue-600 text-xs hover:underline mt-1" onclick="showRecommendationDetails('${rec.id}')">詳細を見る</button>
    `;
    container.appendChild(item);
  });
}

function executeAIAction(action) {
  // Implement AI action execution
  console.log('Executing AI action:', action);
  showNotification(`${action}を実行中...`, 'info');
}

function showRecommendationDetails(id) {
  // Show detailed recommendation modal
  console.log('Showing recommendation details for:', id);
}

function showNotification(message, type) {
  // Implement notification display
  console.log(`${type.toUpperCase()}: ${message}`);
}
</script>

