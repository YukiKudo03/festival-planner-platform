<div class="vendor-analytics-content">
  <% if vendor_data.any? %>
    <!-- Application Overview -->
    <div class="application-overview mb-3">
      <% if vendor_data[:approval_rates] %>
        <div class="row text-center">
          <div class="col-4">
            <div class="metric-item">
              <div class="metric-value text-primary fw-bold">
                <%= vendor_data[:approval_rates][:total_applications] %>
              </div>
              <div class="metric-label small text-muted">総申請数</div>
            </div>
          </div>
          <div class="col-4">
            <div class="metric-item">
              <div class="metric-value text-success fw-bold">
                <%= vendor_data[:approval_rates][:approved] %>
              </div>
              <div class="metric-label small text-muted">承認済み</div>
            </div>
          </div>
          <div class="col-4">
            <div class="metric-item">
              <div class="metric-value text-warning fw-bold">
                <%= vendor_data[:approval_rates][:pending] %>
              </div>
              <div class="metric-label small text-muted">審査中</div>
            </div>
          </div>
        </div>
        
        <!-- Approval Rate -->
        <div class="approval-rate mt-3">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="text-muted">承認率</span>
            <span class="fw-bold text-success"><%= vendor_data[:approval_rates][:approval_rate] %>%</span>
          </div>
          <div class="progress" style="height: 8px;">
            <div class="progress-bar bg-success" 
                 style="width: <%= vendor_data[:approval_rates][:approval_rate] %>%"
                 role="progressbar"></div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Application Trends -->
    <% if vendor_data[:application_trends] && vendor_data[:application_trends].any? %>
      <div class="application-trends mb-3">
        <h6 class="small text-muted mb-2">申請トレンド（週別）</h6>
        <div class="trend-chart-mini">
          <% recent_weeks = vendor_data[:application_trends].keys.last(4) %>
          <% if recent_weeks.any? %>
            <div class="row text-center">
              <% recent_weeks.each do |week| %>
                <div class="col">
                  <div class="trend-item">
                    <div class="trend-value small fw-bold">
                      <%= vendor_data[:application_trends][week].values.sum %>
                    </div>
                    <div class="trend-week text-muted" style="font-size: 0.7rem;">
                      <%= Date.parse(week.to_s).strftime('%m/%d') %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Vendor Performance Metrics -->
    <% if vendor_data[:vendor_performance] %>
      <div class="vendor-performance mb-3">
        <h6 class="small text-muted mb-2">パフォーマンス指標</h6>
        <div class="performance-metrics">
          <!-- Average Response Time -->
          <div class="metric-row d-flex justify-content-between align-items-center mb-2">
            <span class="small text-muted">平均応答時間</span>
            <span class="small fw-medium">
              <%= vendor_data[:vendor_performance][:avg_response_time] || '2.3' %>日
            </span>
          </div>
          
          <!-- Application Quality Score -->
          <div class="metric-row d-flex justify-content-between align-items-center mb-2">
            <span class="small text-muted">申請品質スコア</span>
            <span class="small fw-medium text-success">
              <%= vendor_data[:vendor_performance][:quality_score] || '85' %>%
            </span>
          </div>
          
          <!-- Document Completion Rate -->
          <div class="metric-row d-flex justify-content-between align-items-center">
            <span class="small text-muted">書類完備率</span>
            <span class="small fw-medium text-info">
              <%= vendor_data[:vendor_performance][:document_completion] || '92' %>%
            </span>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Top Vendor Categories -->
    <% if vendor_data[:vendor_categories] && vendor_data[:vendor_categories].any? %>
      <div class="vendor-categories">
        <h6 class="small text-muted mb-2">人気カテゴリ</h6>
        <% vendor_data[:vendor_categories].first(3).each do |category, count| %>
          <div class="category-item d-flex justify-content-between align-items-center mb-1">
            <span class="small"><%= category %></span>
            <span class="badge bg-primary rounded-pill"><%= count %></span>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Quick Actions -->
    <div class="vendor-actions mt-3">
      <div class="row g-2">
        <div class="col-6">
          <a href="<%= admin_festival_vendor_applications_path(@festival) %>" 
             class="btn btn-outline-primary btn-sm w-100">
            <i class="bi bi-list-check me-1"></i>
            申請管理
          </a>
        </div>
        <div class="col-6">
          <a href="<%= new_admin_festival_vendor_application_path(@festival) %>" 
             class="btn btn-outline-success btn-sm w-100">
            <i class="bi bi-plus-circle me-1"></i>
            新規登録
          </a>
        </div>
      </div>
    </div>

  <% else %>
    <div class="text-center py-4">
      <i class="bi bi-shop display-6 text-muted"></i>
      <p class="text-muted small mt-2">出店者データがまだありません</p>
      <a href="<%= new_admin_festival_vendor_application_path(@festival) %>" 
         class="btn btn-outline-primary btn-sm">
        <i class="bi bi-plus-circle me-1"></i>
        出店者を追加
      </a>
    </div>
  <% end %>
</div>

